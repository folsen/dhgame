<h3>Users</h3>
<h4>Welcome, Admin - Use your godgiven right to administrate the feeble users...</h4>
<span style="display:none;float:right;" id="admin_spin"><%= image_tag "ajax-loader.gif" %></span>
<p style="text-align:center;">
<% form_remote_tag :url => {:action => :search_users},:before => "Element.show('admin_spin');$('tableContent').innerHTML = '';", :complete =>"Element.hide('admin_spin')" do %>
<%= text_field 'user', 'name' %><br />
<%= submit_tag "Search" %>
<% end %>
<p>
	<div style="display:inline;" id="tableContent">
		<% unless @users.empty? %>
    <table id="user_table">
    	<tr class="head_row">
    		<th>Username</th>
    		<th>Name</th>
    		<th>Team</th>
    		<th>Phone</th>
    	</tr>
    <% @users.each do |user| %>
    	<tr>
    		<td>
    		<%= user.login %>
    		</td>
    		<td>
    			<%= user.firstname%> <%= user.lastname %>
    		</td>
    		<td>
    			<%= user.team %>
    		</td>
    		<td>
    			<%= user.phone.slice!(0..15)%>
    		</td>

    		<td>
    			<%= link_to 'Destroy', user_path(user), :confirm => 'Are you reaallyy sure?', :method => :delete %>
    		</td>
    		<td>
    			<%= link_to "Edit", edit_user_path(user) %>
    		</td>
    		<td>
    			<%= link_to "View", user_path(user)%>
    		</td>
    	</tr>
    <% end %>
    </table>
    <% end %>
    <% if @users.empty? %>
    	<i>No users found</i>
    <% end %>
	</div>
