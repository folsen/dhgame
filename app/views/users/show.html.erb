<h3>Viewing <%= @user.login %> </h3>
<div style="overflow: auto;">
<div style="float: left; width: 40%;">
<table>
	<tr><td colspan="2"><h3>Basic information</h3></td></tr>
	<tr><td>Name:</td><td><%= @user.firstname %> <%= @user.lastname %></td></tr>
	<tr><td>E-mail:</td><td><%= @user.email %></td></tr>
	<tr><td>Phone:</td><td><%= @user.phone %></td></tr>
	<tr><td>Place:</td><td><%= @user.row %>:<%= @user.seat %></td></tr>
	<tr><td>Team:</td><td><%= @user.team %></td></tr>
	<tr><td>Country:</td><td><%= @user.nationality %></td></tr>
</table>
</div>

<div style="float: left; width: 35%;">
<table>
	<tr><td colspan="3"><h3>User progresses</h3></td></tr>
	<% unless @user.progresses.empty? 
		@user.progresses.each do |p| %>
			<tr>
			  <td><%= p.task.episode_id %>:<%= p.task.position %></td>
			  <td><%= p.created_at %></td>
			</tr>
			<tr>
			  <td colspan="3"><%= p.answer %></td>
			</tr>
	 <% end
	   end %>
</table>
</div>

<div style="float: left; width: 25%;">
<h3>Teammates</h3>

<% @user.teammates.each { |u| %>
	<%= link_to u.login, user_path(u) %><br /> <% } %>

</div>

</div>